@ <stdio.hdr>

global val: u64 = 12;

fn foo()
{
    global val: u64 = 34;
    printf("foo: val = %llu\n", val++);
}

fn bar()
{
    global val: u64 = 56;
    printf("bar: val = %llu\n", val++);
}

fn main()
{
    printf("main: val = %llu\n", val++);
    foo();
    bar();
    printf("main: val = %llu\n", val++);
    foo();
    bar();
    printf("main: val = %llu\n", val++);
}
