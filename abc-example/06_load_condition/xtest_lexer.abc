#include <stdio.hdr>

#include "lexer.hdr"

fn main()
{
    while (getToken() != EOI) {
	printf("%d.%d-%d.%d: %s ('%s' '%s')\n", token.loc.from.line,
	    token.loc.from.col, token.loc.to.line, token.loc.to.col,
	    token.val, tokenKindVal(token.kind), tokenKindStr(token.kind));
    }
    printf("> %s\n", tokenKindStr(token.kind));
}

