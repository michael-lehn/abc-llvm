extern a: i32;
global a: i32;

extern fn foo(:i32): i32;

fn factorial(n: i32): i32
{
    if (n > 1) {
	return n * factorial(n -1);
    } else {
	return 1;
    }
}

fn main(argc: i32): i32
{
    local a: u16;
    local b: i32;
    local c: i64;

    a = 1;
    b = 2;

    c = a + b;

    return foo(c + factorial(argc));
}
