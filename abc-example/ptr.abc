fn printU64(:u64);
fn printNl();
fn putChar(: u16);

fn printStr(s: -> u8)
{
    while (*s) {
	putChar(*s);
	s = s + 1;
    }
}

fn printStrNl(s: -> u8)
{
    printStr(s);
    printNl();
}

fn main(): u8
{
    local s1: -> u8 = "hello world",
	  s2: -> u8 = "Hallo Welt",
	  sel: -> -> u8 = &s1;

    printStrNl(*sel);
    sel = &s2;
    printStrNl(*sel);
    return 0;
}
